//Format the zipped file size field to locale view with no decimals and show by "KB"  
function fmt_file_size(value)
{
  if ( value >= 1000 )
  {
     value = value/1000
     value = Math.round(value);
     value = parseFloat(value.toLocaleString());
     value = value.toFixed(0);
  }
  else if ( value == "0" )
     value = 0;
  else 
	value = 1;
	
  value += " KB"; 
  rs.data(value);     
}
